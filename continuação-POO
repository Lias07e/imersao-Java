package unico;

public class RacaTeste {
    public static void main(String[] args) {

        // aqui estamos colocando os objetos.
        Raca rc[0] = new Raca(100, "Lobo Ibérico",
                         "Canídeo", "Espanha");

        Raca rc[1] = new Raca(101, "Lobo hungaro",
                "Canídeo", "Espanha");

        Raca rc2[2] = new Raca(103, "lobo gigante",
                "Canídeo", "Espanha");

        Raca rc[3] = new Raca(102, "Lobo humano",
                "Canídeo", "Espanha");

  // aqui estamos atribuindo valores booleanos aos meus objetos.
        rc[0].analisarExtincao(true,false,true,true);
        rc[1].analisarExtincao(true,false,true,true);
        rc[2].analisarExtincao(false,true,false,true);

        rc[3].analisarExtincao(true,true,false,false);
        rc[3].analisarExtincao(true,true,true,true);


        // aqui estamos validadndo esses objetos.
        System.out.println("essa especie (lobo Iberico) esta extinta");
        resultadoTeste(rc[0].isRiscoDeExtincao() );

        System.out.println("essa especie (lobo hungaro) esta em extinção");
        resultadoTeste(rc[1].isRiscoDeExtincao() == false);

        System.out.println("essa especie (lobo gigante) esta em extinção");
        resultadoTeste(rc[2].isRiscoDeExtincao() == false);

        System.out.println("essa especie (lobo humano) esta em extinção");
        resultadoTeste(rc[3].isRiscoDeExtincao());

    }

    public static void resultadoTeste(Boolean valor) {
        final String RES_VERDE = "\u001B[32m";
        final String RES_VERMELHO = "\u001B[31m";
        final String RES_RESTART = "\u001B[0m";

        System.out.println((valor ? RES_VERDE + "passou!" :
                RES_VERMELHO + "não passou ") + RES_RESTART);
    }
}

